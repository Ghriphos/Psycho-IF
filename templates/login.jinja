{% extends "main.jinja" %}

{% block title %}Autenticação{% endblock %}

{% block content %}
<form method="POST" action="/login" class="md:max-w-xs  mx-auto mt-7">
    <div class="leading-8">
        <div class="text-xl text-white font-medium">Conectar</div>
        <div class="text-white/80 ">Verifique sua indentidade para prosseguir.</div>
    </div>
    {% if error is defined %}
    <div class="text-red-500 py-2 font-medium">{{ error }}</div>
    {% endif %}
    <div class="mt-2">
        <label for="email" class="leading-8 my-3 text-white/70 font-medium">E-mail</label>
        <input id="email" name="email" type="email" required placeholder="seu@email.com"
            class="w-full my-2 px-2 py-2 rounded text-white bg-zinc-800 border border-white/5" />
    </div>
    <div class="mt-2">
        <label for="passwd" class="leading-8 my-3 text-white/70 font-medium">Senha</label>
        <input id="passwd" name="passwd" type="password" required placeholder="••••••••"
            class="w-full my-2 px-2 py-2 rounded text-white bg-zinc-800 border border-white/5" />
    </div>
    <div class="text-center mt-4">
        <button
            class="w-full px-5 block font-xs py-2 font-medium text-indigo-400 bg-indigo-500/10 border border-indigo-600 rounded-lg cursor-pointer hover:bg-indigo-600 hover:text-white" />Conectar</button>
        <a class="block mt-3 text-white/40 underline" href="/register">Não tem uma conta?</a>
    </div>
    <form>
        {% endblock %}